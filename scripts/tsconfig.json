{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // Important for importing JSON if needed
    "outDir": "./dist_scripts" 
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
